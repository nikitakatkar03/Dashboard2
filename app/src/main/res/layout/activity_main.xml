<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBF1F1"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="150dp"
                    android:text="Welcome to"
                    android:textColor="#1E4368"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.194"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="70dp"
                    android:text="Rahate Goat Farming"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_goneMarginStart="16dp"
                    app:layout_goneMarginTop="16dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/search_edit"
                android:drawableLeft="@drawable/baseline_search_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Search for goats"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:textStyle="italic"
                tools:ignore="TextSizeCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="95dp"
                            android:layout_height="109dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/top_btn_background">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="47dp"
                                android:layout_height="55dp"
                                android:layout_margin="10dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.511"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/baseline_house_siding_24" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="98dp"
                                android:layout_height="37dp"
                                android:layout_weight="1"
                                android:text="Learn Goat Farming"
                                android:textAlignment="center"
                                android:textColor="#1E4368"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints,TextSizeCheck"
                                tools:layout_editor_absoluteX="-4dp"
                                tools:layout_editor_absoluteY="65dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="95dp"
                            android:layout_height="109dp"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/top_btn_background">

                            <ImageView
                                android:id="@+id/image2"
                                android:layout_width="47dp"
                                android:layout_height="55dp"
                                android:layout_margin="10dp"
                                android:layout_marginTop="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/baseline_speaker_notes_24" />

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="97dp"
                                android:layout_height="47dp"
                                android:layout_weight="1"
                                android:text="Breeds Characteristics"
                                android:textAlignment="center"
                                android:textColor="#1E4368"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints,TextSizeCheck"
                                tools:layout_editor_absoluteX="-4dp"
                                tools:layout_editor_absoluteY="65dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="95dp"
                            android:layout_height="109dp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/top_btn_background">

                            <ImageView
                                android:id="@+id/image3"
                                android:layout_width="47dp"
                                android:layout_height="55dp"
                                android:layout_margin="10dp"
                                android:layout_marginTop="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/baseline_grass_24" />

                            <TextView
                                android:id="@+id/text3"
                                android:layout_width="77dp"
                                android:layout_height="39dp"
                                android:layout_weight="1"
                                android:text="Food to
                                Feed"
                                android:textAlignment="center"
                                android:textColor="#1E4368"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints,TextSizeCheck"
                                tools:layout_editor_absoluteX="7dp"
                                tools:layout_editor_absoluteY="65dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="109dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="95dp"
                            android:layout_height="109dp"
                            android:layout_marginStart="0dp"
                            android:background="@drawable/top_btn_background">

                            <ImageView
                                android:id="@+id/image4"
                                android:layout_width="47dp"
                                android:layout_height="55dp"
                                android:layout_margin="10dp"
                                android:layout_marginTop="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.51"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/baseline_vaccines_24" />

                            <TextView
                                android:id="@+id/text4"
                                android:layout_width="94dp"
                                android:layout_height="43dp"
                                android:layout_weight="1"
                                android:text="Disease Prevention and Treatment"
                                android:textAlignment="center"
                                android:textColor="#1E4368"
                                android:textSize="11dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints,TextSizeCheck"
                                tools:layout_editor_absoluteX="-3dp"
                                tools:layout_editor_absoluteY="65dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>